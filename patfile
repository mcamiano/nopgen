FUNCTION Delete--table--()
  DEFINE
    l--table-- RECORD LIKE --table--.*

  INPUT BY NAME 

  LET l--table--.--column1-- = NULL

--PARAGRAPH--EACH KEY FIELD--
    l--table--.--column-- --,--
--END PARAGRAPH--EACH KEY FIELD--

  ON KEY (CONTROL-F)

    CASE   # infield( --table--.* )

--PARAGRAPH--EACH COLUMN--
    WHEN infield( --column-- )
      CALL Pick--column--() RETURNING l2--table--.*
      IF NOT int_flag THEN
        LET l--table--.--column-- = l2--table--.--column--
        DISPLAY BY NAME l--table--.--column--
        NEXT FIELD --column--
      END IF

--END PARAGRAPH--EACH COLUMN--

    END CASE  # infield( --table--.* )

  ON KEY ( INTERRUPT )
     INITIALIZE l--table--.* TO NULL
     ERROR "User cancelled operation"
     SLEEP 2
     EXIT INPUT

  AFTER INPUT
     IF NOT int_flag THEN

	DELETE FROM --table--
	WHERE 
--PARAGRAPH--EACH KEY FIELD--
	   --table--.--column-- = l--table--.--column-- --,and--
--END PARAGRAPH--EACH KEY FIELD--

	ERROR "Row deleted."

	SLEEP 2
     END IF
  END INPUT

  CLEAR FORM

  RETURN

END FUNCTION   # Save--table--()
